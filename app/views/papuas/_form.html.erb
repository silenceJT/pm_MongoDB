<%= form_with(model: papua, local: true) do |form| %>
<% if papua.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(papua.errors.count, "error") %> prohibited this papua from being saved:</h2>

  <ul>
    <% papua.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
