<%= form_with(model: segment) do |form| %>
  <% if segment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(segment.errors.count, "error") %> prohibited this segment from being saved:</h2>

      <ul>
        <% segment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5 flex items-center justify-center">
    <div class="shadow overflow-hidden sm:rounded-md w-1/3">
      <div class="px-4 py-5 bg-white sm:p-6">
        <div class="">
          <%= form.label :ipa, "IPA", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :ipa, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :cvd, "CVD", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :cvd, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :plain_vs_non_plain, "Plain vs Non-Plain", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :plain_vs_non_plain, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :voicing, "Voicing", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :voicing, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :place, "Place", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :place, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :manner, "Manner", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :manner, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :additional, "Additional", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :additional, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :extra, "Extra", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :extra, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :unicode, "Unicode", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :unicode, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= form.label :notes, "Notes", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 4, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
      </div>
      <div class="actions px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= link_to 'Back', segments_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit class: "btn inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 ml-3" %>
    </div>
    </div>
  </div>

<% end %>
