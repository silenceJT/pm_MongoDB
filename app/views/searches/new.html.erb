<%= form_for @search do |f| %>
  <div class="mt-5 flex items-center justify-center">
    <div class="shadow overflow-hidden sm:rounded-md w-1/3">
      <div class="px-4 py-5 bg-white sm:p-6">
        <div class="">
          <%= f.label :language_name, "Language", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :language_name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :language_family, "Language Family", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :language_family, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          <%#= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
        </div>
        <div class="mt-2">
          <%= f.label :iso, "ISO", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :iso, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :area, "Area", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :area, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :country, "Country", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :country, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :region, "Region", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :region, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :inv, "Inventory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :inv, value: params[:inv], class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="mt-2">
          <%= f.label :c_compare, "Consonant", class: "block text-sm font-medium text-gray-700" %>
          <div class="flex rounded-md shadow-sm mt-1">
            <span class="inline-flex items-center">
              <%= f.select :c_compare, Search::COMPARE, {}, {class: "focus:ring-indigo-500 focus:border-indigo-500 h-full py-0 pl-2 pr-7 border-gray-300 bg-transparent text-gray-500 sm:text-sm rounded-l-md w-24"} %>
            </span>
            <%= f.text_field :c_size, class: "focus:ring-indigo-500 focus:border-indigo-500 block sm:text-sm border-gray-300 rounded-none rounded-r-md w-full" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.label :v_compare, "Vowels", class: "block text-sm font-medium text-gray-700" %>
          <div class="flex rounded-md shadow-sm mt-1">
            <span class="inline-flex items-center">
              <%= f.select :v_compare, Search::COMPARE, {}, {class: "focus:ring-indigo-500 focus:border-indigo-500 h-full py-0 pl-2 pr-7 border-gray-300 bg-transparent text-gray-500 sm:text-sm rounded-l-md w-24"} %>
            </span>
            <%= f.text_field :v_size, class: "focus:ring-indigo-500 focus:border-indigo-500 block sm:text-sm border-gray-300 rounded-none rounded-r-md w-full" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.label :total_compare, "Total", class: "block text-sm font-medium text-gray-700" %>
          <div class="flex rounded-md shadow-sm mt-1">
            <span class="inline-flex items-center">
              <%= f.select :total_compare, Search::COMPARE, {}, {class: "focus:ring-indigo-500 focus:border-indigo-500 h-full py-0 pl-2 pr-7 border-gray-300 bg-transparent text-gray-500 sm:text-sm rounded-l-md w-24"} %>
            </span>
            <%= f.text_field :total_size, class: "focus:ring-indigo-500 focus:border-indigo-500 block sm:text-sm border-gray-300 rounded-none rounded-r-md w-full" %>
          </div>
        </div>
        <div class="actions mt-5 flex items-center justify-center">
          <%= f.submit "Search", class: "btn inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full" %>
          <%#= f.submit "Search" %>
        </div>
      </div>
    </div>
  </div>
<% end %>