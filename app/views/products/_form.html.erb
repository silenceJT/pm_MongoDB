  <div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Product Information</h3>
          <!--p class="mt-1 text-sm text-gray-600">
            Use a permanent address where you can receive mail.
          </p-->
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <!--form action="#" method="POST"-->
          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-3">
                  <%= form.label :product_name, "Product name", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :product_name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <%= form.label :color, "Color", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :color, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <%= form.label :brand, "Brand", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :brand, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <%= form.label :category, "Category", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.select :category, Product::CATEGORY, {}, {class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"} %>
                </div>

                <div class="col-span-6">
                  <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= form.text_area :description, rows: 6, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Brief description for the product. URLs are hyperlinked.
                  </p>
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                  <%= form.label :ean, "EAN", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :ean, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                  <%= form.label :vender_sku, "Vender SKU", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :vender_sku, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                  <%= form.label :sps_sku, "SPS SKU", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :sps_sku, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-2 mt-1">
                  <%= form.label :fob_usd, "FOB USD", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 sm:text-sm">
                        $
                      </span>
                    </div>
                    <%= form.text_field :fob_usd, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2 mt-1">
                  <%= form.label :fob_aud, "FOB AUD", class: "block text-sm font-medium text-gray-700" %>
