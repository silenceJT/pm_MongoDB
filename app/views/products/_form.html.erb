                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 sm:text-sm">
                        $
                      </span>
                    </div>
                    <%= form.text_field :fob_aud, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2 mt-1">
                  <%= form.label :retail_price, "Retail Price", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 sm:text-sm">
                        $
                      </span>
                    </div>
                    <%= form.text_field :retail_price, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-3 mt-1">
                  <%= form.label :margin_rate, "Margin rate", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :margin_rate, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-3 mt-1">
                  <%= form.label :channel_buy_price_egst, "Channel buy price (excl GST)", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 sm:text-sm">
                        $
