          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
              <fieldset>
                <!--legend class="text-base font-medium text-gray-900">By Email</legend-->
                <div class="mt-4 space-y-4">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= form.check_box :saa, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= form.label :saa, "SAA", class: "font-medium text-gray-700" %>
                      <p class="text-gray-500">SAA Approvals is accredited by the Joint Accreditation Service of Australia and New Zealand (JAS-ANZ). </p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= form.check_box :rcm, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= form.label :rcm, "RCM", class: "font-medium text-gray-700" %>
                      <p class="text-gray-500">The Regulatory Compliance Mark (RCM) is a trade mark owned by the electrical regulator (Regulatory Authorities (RAs)) and Australian Communications Media Authority (ACMA).</p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= form.check_box :ce, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= form.label :ce, "CE", class: "font-medium text-gray-700" %>
                      <p class="text-gray-500">CE Australia is the preferred independent supplier to many Original Equipment Manufacturers (OEM) and Contract Equipment Manufacturers (CEM) Australia wide.</p>
                    </div>
                  </div>
                </div>
              </fieldset>
              <fieldset>
                <div>
                  <legend class="text-base font-medium text-gray-900">Activity</legend>
                  <p class="text-sm text-gray-500">These are delivered via SMS to your mobile phone.</p>
                </div>
                <div class="mt-4 space-y-4">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= form.check_box :active, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= form.label :active, "Active", class: "font-medium text-gray-700" %>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="actions px-4 py-3 bg-gray-50 text-right sm:px-6">
              <%= form.submit class: "btn inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <!--/form-->
      </div>
    </div>
  </div>


